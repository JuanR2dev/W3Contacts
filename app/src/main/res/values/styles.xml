<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- region Constraint Styles -->
    <style name="ConstraintCenterH">
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
    </style>

    <style name="ConstraintCenterV">
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>

    <style name="ConstraintCenter">
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
        <item name="layout_constraintBottom_toBottomOf">parent</item>
    </style>
    <!-- endregion Constraint Styles -->

    <!-- region Contact Info styles -->
    <style name="CardInfo">
        <item name="android:layout_gravity">left|center</item>
        <item name="android:layout_column">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="CardIcon">
        <item name="android:layout_gravity">right|center</item>
        <item name="android:layout_column">0</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_margin">5dp</item>
    </style>
    <!-- endregion Contact Info styles -->

</resources>